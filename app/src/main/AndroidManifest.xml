<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myapplication.ui.screen.HomeActivity"
            android:exported="false"
        />

        <!-- Statistics -->
        <activity
            android:name="com.example.myapplication.ui.screen.StatisticsActivity"
            android:exported="false"
            />

        <!-- Material -->
        <activity
            android:name="com.example.myapplication.ui.screen.CartActivity"
            android:exported="false"
            />

        <!-- Customers -->
        <activity
            android:name="com.example.myapplication.ui.screen.AllCustomersSummaryActivity"
            android:exported="false"
            />
        <activity
            android:name="com.example.myapplication.ui.screen.SingleCostumerSummaryActivity"
            android:exported="false"
            />
        <activity
            android:name="com.example.myapplication.ui.screen.CustomerAddActivity"
            android:exported="false"
            />

        <!-- Jobs -->
        <activity
            android:name="com.example.myapplication.ui.screen.AllJobsSummaryActivity"
            android:exported="false"
            />
    </application>

</manifest>